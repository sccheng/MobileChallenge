<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.sccheng.ibm.mobilechallenge.MoreDetails">

    <TextView
        android:id="@+id/promptUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/promptUserInput"/>

    <EditText
        android:id="@+id/key1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_key_hint"/>

    <EditText
        android:id="@+id/value1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_value_hint" />

    <Button
        android:id="@+id/runServiceInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="callServiceInput"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/displayMoreResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
